<h1>Listing responses</h1>

<h3><%= @group.name %> thread</h3>

<table>
  <tr>
    <th>Text</th>
    <th>User Name</th>
    <th>Mentions</th>
    <th>Created</th>
  </tr>

<% @responses.each do |response| %>
  <tr>
    <td><%= response.prompt %><br /><%= response.text %></td>
    <td><%= response.user.name %></td>
    <td><%= response.mentions.collect { |mention| mention.user.name }.join(",") %></td>
    <td><%= time_ago_in_words(response.created_at) %> ago</td>
  </tr>
<% end %>
</table>
